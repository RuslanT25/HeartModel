@model HeartMVC.Models.AdvancedAnalyticsViewModel

@{
    ViewData["Title"] = "Advanced ML Analytics Dashboard";
}

<div class="container-fluid mt-4">
    @if (Model.HasError)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
        </div>
        <div class="text-center">
            <a asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-left me-2"></i>Ana Sayfaya Dön
            </a>
        </div>
    }
    else
    {
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-gradient-primary text-white">
                        <h2 class="mb-0">
                            <i class="fas fa-chart-line me-2"></i>
                            Advanced ML Analytics Dashboard
                        </h2>
                        <small>Analiz Tarihi: @Model.AnalysisDate.ToString("dd.MM.yyyy HH:mm")</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Feature Importance Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-star me-2"></i>
                            Feature Importance Analysis (Random Forest)
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <h6 class="text-success mb-3">Özellik Önem Sıralaması</h6>
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-success">
                                            <tr>
                                                <th>Sıra</th>
                                                <th>Özellik</th>
                                                <th>Önem Skoru</th>
                                                <th>Std. Sapma</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var feature in Model.FeatureImportance.Take(10))
                                            {
                                                <tr>
                                                    <td>
                                                        <span class="badge bg-primary">#@feature.Rank</span>
                                                    </td>
                                                    <td><strong>@feature.DisplayName</strong></td>
                                                    <td>
                                                        <span class="badge bg-@GetImportanceColor(feature.ImportanceScore)">
                                                            @feature.ImportanceScore.ToString("F4")
                                                        </span>
                                                    </td>
                                                    <td>@feature.StandardDeviation.ToString("F4")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <h6 class="text-success mb-3">Özellik Önem Grafiği</h6>
                                <canvas id="featureImportanceChart" width="400" height="300"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ROC Curve Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-chart-area me-2"></i>
                            ROC Curve Analysis - Model Karşılaştırması
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-8">
                                <canvas id="rocCurveChart" width="600" height="400"></canvas>
                            </div>
                            <div class="col-lg-4">
                                <!-- Logistic Regression Metrics -->
                                <div class="card border-info mb-3">
                                    <div class="card-header bg-info text-white">
                                        <h6 class="mb-0">Logistic Regression</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-2">
                                            <strong>AUC:</strong>
                                            <span class="badge bg-@GetAUCColor(Model.AUCValue) fs-6">
                                                @Model.AUCValue.ToString("F3")
                                            </span>
                                        </div>
                                        <div class="mb-2">
                                            <strong>Optimal Threshold:</strong>
                                            <code>@Model.OptimalThreshold.ToString("F3")</code>
                                        </div>
                                    </div>
                                </div>

                                <!-- Random Forest Metrics -->
                                <div class="card border-success mb-3">
                                    <div class="card-header bg-success text-white">
                                        <h6 class="mb-0">Random Forest</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-2">
                                            <strong>AUC:</strong>
                                            <span class="badge bg-@GetAUCColor(Model.FastForestAUCValue) fs-6">
                                                @Model.FastForestAUCValue.ToString("F3")
                                            </span>
                                        </div>
                                        <div class="mb-2">
                                            <strong>Optimal Threshold:</strong>
                                            <code>@Model.FastForestOptimalThreshold.ToString("F3")</code>
                                        </div>
                                    </div>
                                </div>

                                <!-- Comparison -->
                                <div class="alert alert-info">
                                    <small>
                                        <strong>En İyi Model:</strong><br>
                                        @if (Model.AUCValue > Model.FastForestAUCValue)
                                        {
                                            <span class="text-info">Logistic Regression (AUC: @Model.AUCValue.ToString("F3"))</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Random Forest (AUC: @Model.FastForestAUCValue.ToString("F3"))</span>
                                        }
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Performance Timing Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark">
                        <h4 class="mb-0">
                            <i class="fas fa-stopwatch me-2"></i>
                            Performance Timing Analysis
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-warning mb-3">Eğitim Süreleri</h6>
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead class="table-warning">
                                            <tr>
                                                <th>Model</th>
                                                <th>Eğitim Süresi (ms)</th>
                                                <th>Durum</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="@(Model.TimingData.FasterTrainingModel == "FastForest" ? "table-success" : "")">
                                                <td><strong>Random Forest</strong></td>
                                                <td>@Model.TimingData.FastForestTrainingTime ms</td>
                                                <td>
                                                    @if (Model.TimingData.FasterTrainingModel == "FastForest")
                                                    {
                                                        <span class="badge bg-success">Daha Hızlı</span>
                                                    }
                                                </td>
                                            </tr>
                                            <tr class="@(Model.TimingData.FasterTrainingModel == "LogisticRegression" ? "table-success" : "")">
                                                <td><strong>Logistic Regression</strong></td>
                                                <td>@Model.TimingData.LogisticRegressionTrainingTime ms</td>
                                                <td>
                                                    @if (Model.TimingData.FasterTrainingModel == "LogisticRegression")
                                                    {
                                                        <span class="badge bg-success">Daha Hızlı</span>
                                                    }
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-warning mb-3">Tahmin Süreleri</h6>
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead class="table-warning">
                                            <tr>
                                                <th>Model</th>
                                                <th>Tahmin Süresi (ms)</th>
                                                <th>Durum</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="@(Model.TimingData.FasterPredictionModel == "FastForest" ? "table-success" : "")">
                                                <td><strong>Random Forest</strong></td>
                                                <td>@Model.TimingData.FastForestPredictionTime ms</td>
                                                <td>
                                                    @if (Model.TimingData.FasterPredictionModel == "FastForest")
                                                    {
                                                        <span class="badge bg-success">Daha Hızlı</span>
                                                    }
                                                </td>
                                            </tr>
                                            <tr class="@(Model.TimingData.FasterPredictionModel == "LogisticRegression" ? "table-success" : "")">
                                                <td><strong>Logistic Regression</strong></td>
                                                <td>@Model.TimingData.LogisticRegressionPredictionTime ms</td>
                                                <td>
                                                    @if (Model.TimingData.FasterPredictionModel == "LogisticRegression")
                                                    {
                                                        <span class="badge bg-success">Daha Hızlı</span>
                                                    }
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Data Statistics Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-secondary text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-database me-2"></i>
                            Data Preprocessing Statistics
                        </h4>
                    </div>
                    <div class="card-body">
                        <!-- Dataset Overview -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card border-primary">
                                    <div class="card-body text-center">
                                        <h5 class="text-primary">@Model.DataStats.TotalRows</h5>
                                        <small>Toplam Satır</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card border-info">
                                    <div class="card-body text-center">
                                        <h5 class="text-info">@Model.DataStats.TotalColumns</h5>
                                        <small>Toplam Sütun</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card border-warning">
                                    <div class="card-body text-center">
                                        <h5 class="text-warning">@Model.DataStats.TotalMissingValues</h5>
                                        <small>Eksik Değer</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card border-danger">
                                    <div class="card-body text-center">
                                        <h5 class="text-danger">@Model.DataStats.TotalOutliers</h5>
                                        <small>Aykırı Değer</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Column Statistics -->
                        <h6 class="text-secondary mb-3">Sütun İstatistikleri</h6>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-secondary">
                                    <tr>
                                        <th>Sütun</th>
                                        <th>Ortalama</th>
                                        <th>Medyan</th>
                                        <th>Min</th>
                                        <th>Max</th>
                                        <th>Std. Sapma</th>
                                        <th>Eksik</th>
                                        <th>Aykırı</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var stat in Model.DataStats.ColumnStats.Take(10))
                                    {
                                        <tr>
                                            <td><strong>@stat.Key</strong></td>
                                            <td>@stat.Value.Mean.ToString("F2")</td>
                                            <td>@stat.Value.Median.ToString("F2")</td>
                                            <td>@stat.Value.Min.ToString("F2")</td>
                                            <td>@stat.Value.Max.ToString("F2")</td>
                                            <td>@stat.Value.StandardDeviation.ToString("F2")</td>
                                            <td>
                                                @if (Model.DataStats.MissingValues.ContainsKey(stat.Key))
                                                {
                                                    <span class="badge bg-@(Model.DataStats.MissingValues[stat.Key] > 0 ? "warning" : "success")">
                                                        @Model.DataStats.MissingValues[stat.Key]
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (Model.DataStats.OutlierCounts.ContainsKey(stat.Key))
                                                {
                                                    <span class="badge bg-@(Model.DataStats.OutlierCounts[stat.Key] > 0 ? "danger" : "success")">
                                                        @Model.DataStats.OutlierCounts[stat.Key]
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="text-center mb-4">
            <a asp-action="Index" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-arrow-left me-2"></i>Ana Sayfa
            </a>
            <a asp-action="Evaluation" class="btn btn-info btn-lg me-3">
                <i class="fas fa-chart-bar me-2"></i>Model Değerlendirme
            </a>
            <button class="btn btn-secondary btn-lg me-3" onclick="window.print()">
                <i class="fas fa-print me-2"></i>Raporu Yazdır
            </button>
            <button class="btn btn-success btn-lg" onclick="location.reload()">
                <i class="fas fa-sync-alt me-2"></i>Yenile
            </button>
        </div>
    }
</div>

@functions {
    string GetImportanceColor(double score)
    {
        if (score >= 0.1) return "success";
        if (score >= 0.05) return "warning";
        return "secondary";
    }

    string GetAUCColor(double auc)
    {
        if (auc >= 0.9) return "success";
        if (auc >= 0.8) return "info";
        if (auc >= 0.7) return "warning";
        return "danger";
    }

    string GetAUCInterpretation(double auc)
    {
        if (auc >= 0.9) return "Mükemmel sınıflandırma performansı";
        if (auc >= 0.8) return "İyi sınıflandırma performansı";
        if (auc >= 0.7) return "Orta sınıflandırma performansı";
        if (auc >= 0.6) return "Zayıf sınıflandırma performansı";
        return "Çok zayıf sınıflandırma performansı";
    }
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Feature Importance Chart
            const featureCtx = document.getElementById('featureImportanceChart').getContext('2d');
            const featureData = @Html.Raw(Json.Serialize(Model.FeatureImportance.Take(8).Select(f => new { 
                label = f.DisplayName, 
                value = f.ImportanceScore 
            })));

            new Chart(featureCtx, {
                type: 'bar',
                data: {
                    labels: featureData.map(f => f.label),
                    datasets: [{
                        label: 'Önem Skoru',
                        data: featureData.map(f => f.value),
                        backgroundColor: 'rgba(25, 135, 84, 0.8)',
                        borderColor: 'rgba(25, 135, 84, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'En Önemli 8 Özellik'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Önem Skoru'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Özellikler'
                            }
                        }
                    }
                }
            });

            // ROC Curve Chart - Both Models
            const rocCtx = document.getElementById('rocCurveChart').getContext('2d');
            const logisticROCData = @Html.Raw(Json.Serialize(Model.ROCCurveData.Select(r => new { 
                x = r.FalsePositiveRate, 
                y = r.TruePositiveRate,
                threshold = r.Threshold
            })));

            const fastForestROCData = @Html.Raw(Json.Serialize(Model.FastForestROCCurveData.Select(r => new { 
                x = r.FalsePositiveRate, 
                y = r.TruePositiveRate,
                threshold = r.Threshold
            })));

            new Chart(rocCtx, {
                type: 'line',
                data: {
                    datasets: [{
                        label: 'Logistic Regression (AUC: @Model.AUCValue.ToString("F3"))',
                        data: logisticROCData,
                        borderColor: 'rgba(13, 202, 240, 1)',
                        backgroundColor: 'rgba(13, 202, 240, 0.1)',
                        borderWidth: 3,
                        fill: false,
                        tension: 0.1,
                        pointRadius: 1
                    }, {
                        label: 'Random Forest (AUC: @Model.FastForestAUCValue.ToString("F3"))',
                        data: fastForestROCData,
                        borderColor: 'rgba(25, 135, 84, 1)',
                        backgroundColor: 'rgba(25, 135, 84, 0.1)',
                        borderWidth: 3,
                        fill: false,
                        tension: 0.1,
                        pointRadius: 1
                    }, {
                        label: 'Random Classifier (AUC: 0.500)',
                        data: [{x: 0, y: 0}, {x: 1, y: 1}],
                        borderColor: 'rgba(220, 53, 69, 0.8)',
                        borderWidth: 2,
                        borderDash: [5, 5],
                        fill: false,
                        pointRadius: 0
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: true,
                            text: 'ROC Curve Karşılaştırması - Logistic Regression vs Random Forest'
                        },
                        legend: {
                            display: true,
                            position: 'bottom'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    if (context.datasetIndex === 0) {
                                        const point = logisticROCData[context.dataIndex];
                                        return `Logistic - TPR: ${point.y.toFixed(3)}, FPR: ${point.x.toFixed(3)}, Threshold: ${point.threshold.toFixed(3)}`;
                                    } else if (context.datasetIndex === 1) {
                                        const point = fastForestROCData[context.dataIndex];
                                        return `Random Forest - TPR: ${point.y.toFixed(3)}, FPR: ${point.x.toFixed(3)}, Threshold: ${point.threshold.toFixed(3)}`;
                                    }
                                    return context.dataset.label;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            type: 'linear',
                            position: 'bottom',
                            min: 0,
                            max: 1,
                            title: {
                                display: true,
                                text: 'False Positive Rate (1 - Specificity)'
                            }
                        },
                        y: {
                            min: 0,
                            max: 1,
                            title: {
                                display: true,
                                text: 'True Positive Rate (Sensitivity)'
                            }
                        }
                    },
                    elements: {
                        point: {
                            radius: 1,
                            hoverRadius: 4
                        }
                    }
                }
            });

            // Mark navigation as active
            const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
            navLinks.forEach(link => {
                if (link.href.includes('Analytics')) {
                    link.classList.add('active');
                }
            });
        });
    </script>
}

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);
    }
    
    .card {
        border-radius: 15px;
        border: none;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
    }
    
    @@media print {
        .btn { display: none !important; }
        .card { border: 2px solid #000 !important; }
        canvas { max-width: 100% !important; }
    }
</style>